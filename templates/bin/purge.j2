#!/bin/sh

docker_run_flags=''
if [ -t 1 ]; then
    # Got tty
    docker_run_flags='-it'
fi

{{ devture_systemd_docker_base_host_command_docker }} run \
$docker_run_flags \
--rm \
--network={{ ddclient_container_network }} \
--env-file={{ ddclient_base_path }}/env \
{% for arg in ddclient_container_extra_arguments %}
{{ arg }} \
{% endfor %}
{{ ddclient_container_image }}
