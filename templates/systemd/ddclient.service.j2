[Unit]
Description=ddclient ({{ ddclient_identifier }})
{% for service in ddclient_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in ddclient_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ ddclient_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ ddclient_identifier }} 2>/dev/null || true'

{#
  PUID and PGID are specified on env.j2 to run the container as ddclient_uid:ddclient_gid
  See: https://github.com/linuxserver/docker-ddclient/blob/master/README.md#user--group-identifiers
#}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ ddclient_identifier }} \
      --log-driver=none \
      --network={{ ddclient_container_network }} \
      --env-file={{ ddclient_base_path }}/env \
      --mount type=bind,src={{ ddclient_config_path }},dst=/config \
      {% for volume in ddclient_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options else '' }} \
      {% endfor %}
      {% for arg in ddclient_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ ddclient_container_image_self_build_name if ddclient_container_image_self_build else ddclient_container_image }} \
      {{ ddclient_process_extra_arguments | join(' ') }}

{% for network in ddclient_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ ddclient_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ ddclient_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ ddclient_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ ddclient_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ ddclient_identifier }}

[Install]
WantedBy=multi-user.target
